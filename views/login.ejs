<html>
  <head>
    <title>MelleWS</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
  </head>
  <body>
    <%- include('bar', {req: req}); %>
    <br/>
    <br/>
    <br/>
    <div class="w3-container w3-center">
        <h1>Login</h1>
        <div class="w3-bar">
            <% if (req.cookies.userCookie) { %>
                <p>You are logged in as <%= req.cookies.userCookie %>. Click to <a href="/forget">log out</a>.</p>
            <% } else { %>
                <form class="w3-container" method="post" action="/login">
                    <input class="w3-input" type="text" name="textB" placeholder="User ID"/>
                    <input class="w3-button w3-teal w3-margin-top" type="submit" value="Log in"/></form>
                </form>
            <% } %>
        </div>
      </div>
  </body>
</html>
