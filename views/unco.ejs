<html>
  <head>
    <title>MelleWS</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
  </head>
  <body>
    <div class="w3-top w3-margin-bottom">
        <div class="w3-bar w3-yellow w3-padding w3-card w3-margin-bottom">
          <a href="/"><img 
          src="./images/logo-black-v2.svg"
          alt="MelleWS"
          height="36"
          class=""/></a>
          <div class="w3-display-topmiddle w3-hide-small">
            <% if (req.cookies.userCookie) { %>
              <p>Hi, <%= req.cookies.userCookie %></p>
            <% } %>
          </div>
          <div class="w3-right w3-hide-small">
            <a href="drive" class="w3-bar-item w3-button w3-round-xxlarge">Drive</a>
            <a href="convert" class="w3-bar-item w3-button w3-round-xxlarge">Convert</a>
            <a href="info" class="w3-bar-item w3-button w3-round-xxlarge">Info</a>
            <% if (!req.cookies.userCookie) { %>
              <a href="login" class="w3-bar-item w3-button w3-round-xxlarge w3-hover-teal"><strong>Log in</strong></a>
              <a href="signup" class="w3-bar-item w3-button w3-round-xxlarge w3-hover-teal"><strong>Sign Up</strong></a>
            <% } %>
          </div>
        </div>
      </div>    <br/>
    <br/>
    <br/>
    <div class="w3-container w3-display-center">
        <div class="w3-display-left w3-margin-left w3-padding">
            <h1>Under construction!</h1>
            <p>The page you are trying to visit is still under construction.</p>
        </div>
        <div class="w3-display-right w3-margin-right w3-padding">
            <img 
            src="./images/unco.svg"
            alt="Under construction"
            height="500"
            class=""/>
        </div>
      </div>      
  </body>
</html>
